<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="contextual_menu_text">
	    <item name="android:textSize">20dip</item>
	    <item name="android:paddingLeft">10dip</item>
	    <item name="android:paddingTop">6dip</item>
	</style>
	
	<style name="bho_preference_H1">
	    <item name="android:textSize">20dip</item>
	    <item name="android:textColor">#ffffffff</item>
	</style>
	
	<style name="bho_preference_P">
	    <item name="android:textSize">12dip</item>
	    <item name="android:textColor">#ffcccccc</item>
	</style>
	
	<style name="bho_preference_separator">
	    <item name="android:background">#ff444444</item>
	    <item name="android:textColor">#ffcccccc</item>
	    <item name="android:textSize">16dip</item>
	    <item name="android:paddingLeft">10dip</item>
	    <item name="android:paddingRight">10dip</item>
	    <item name="android:paddingTop">4dip</item>
	</style>
	
	<style name="bho_toast">
	    <item name="android:background">#dd000000</item>
	</style>
	
	<style name="bho_toast_P">
	    <item name="android:padding">10dip</item>
	    <item name="android:textSize">16dip</item>
	    <item name="android:textColor">#ffcccccc</item>
	</style>
	
	<style name="bho_tab_P">
	    <item name="android:textSize">12dip</item>
	    <item name="android:textColor">#ff000000</item>
	</style>
	

</resources>